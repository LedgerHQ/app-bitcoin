{
  "version": 1,
  "rules": [
    {
      "regexp": "Tap to continue",
      "actions": [
        ["finger", 55, 550, true],
        ["finger", 55, 550, false]
      ]
    },
    {
      "regexp": "Hold to sign",
      "actions": [
        ["finger", 55, 550, true]
      ]
    },
    {
      "regexp": "Message hash",
      "actions": [
        ["button", 2, true],
        ["button", 2, false]
      ]
    },
    {
      "regexp": "[S]?ign",
      "conditions": [
        [ "seen", false ]
      ],
      "actions": [
        ["setbool", "seen", true],
        ["button", 2, true],
        ["button", 2, false]
      ]
    },
    {
      "regexp": "[S]?ign",
      "conditions": [
        [ "seen", true ]
      ],
      "actions": [
        ["setbool", "seen", true],
        [ "button", 1, true ],
        [ "button", 2, true ],
        [ "button", 2, false ],
        [ "button", 1, false ]

      ]
    }
  ]
}
