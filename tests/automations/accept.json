{
  "version": 1,
  "rules": [
    {
      "regexp": "Review|Amount|Address|Confirm|Fees",
      "actions": [
        ["button", 2, true],
        ["button", 2, false]
      ]
    },
    {
      "regexp": "Tap to continue",
      "actions": [
        ["finger", 55, 550, true],
        ["finger", 55, 550, false]
      ]
    },
    {
      "regexp": "Hold to sign",
      "actions": [
        ["finger", 55, 550, true]
      ]
    },
    {
      "regexp": "Processing|CONFIRMED",
      "actions": [
        ["finger", 55, 550, false]
      ]
    },
    {
      "text": "Accept",
      "actions": [
        [ "button", 1, true ],
        [ "button", 2, true ],
        [ "button", 2, false ],
        [ "button", 1, false ]
      ]
    },
    {
      "regexp": "Approve",
      "actions": [
        [ "button", 1, true ],
        [ "button", 2, true ],
        [ "button", 2, false ],
        [ "button", 1, false ],
        [ "finger", 55, 550, true],
        [ "finger", 55, 550, false]
      ]
    }
  ]
}
